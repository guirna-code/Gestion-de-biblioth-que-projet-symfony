{% extends 'base.html.twig' %}

{% block title %}Confirmer l'achat - {{ livre.titre }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
<style>

:root {
    --fun-primary: #6f42c1;
    --fun-secondary: #20c997;
    --fun-accent: #ffc107;
    --fun-bg: #f8f9ff;
}


body {
    background: linear-gradient(135deg, #f8f9ff, #eef1ff);
}


.card {
    animation: popIn 0.6s ease-out;
}

@keyframes popIn {
    from {
        transform: scale(0.95) translateY(20px);
        opacity: 0;
    }
    to {
        transform: scale(1) translateY(0);
        opacity: 1;
    }
}

.img-fluid {
    transition: transform 0.4s ease, box-shadow 0.4s ease;
}

.img-fluid:hover {
    transform: rotate(-2deg) scale(1.05);
    box-shadow: 0 15px 30px rgba(0,0,0,0.15);
}

.badge {
    background: linear-gradient(45deg, var(--fun-primary), #b99ff6ff);
    font-size: 0.8rem;
    letter-spacing: 0.05em;
}


.bg-light {
    background: linear-gradient(135deg, #ffffff, #f1f3ff) !important;
    box-shadow: inset 0 0 0 1px rgba(0,0,0,0.03);
}


.alert-warning {
    background: linear-gradient(135deg, #fff3cd, #ffe69c);
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(255,193,7,0.4); }
    70% { box-shadow: 0 0 0 10px rgba(255,193,7,0); }
    100% { box-shadow: 0 0 0 0 rgba(255,193,7,0); }
}

.btn-success {
    background: linear-gradient(135deg, var(--fun-secondary), #198754);
    border: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.btn-success::after {
    content: "‚ú®";
    position: absolute;
    right: 20px;
    opacity: 0;
    transition: all 0.3s ease;
}

.btn-success:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 10px 25px rgba(32,201,151,0.4);
}

.btn-success:hover::after {
    opacity: 1;
    right: 15px;
}


.btn-link {
    transition: color 0.3s ease, transform 0.3s ease;
}

.btn-link:hover {
    color: var(--fun-primary);
    transform: translateX(-4px);
}


.breadcrumb a {
    text-decoration: none;
    position: relative;
}

.breadcrumb a::after {
    content: "";
    position: absolute;
    width: 0%;
    height: 2px;
    bottom: -2px;
    left: 0;
    background-color: var(--fun-primary);
    transition: width 0.3s ease;
}

.breadcrumb a:hover::after {
    width: 100%;
}

/* üì± Responsive petit bonus */
@media (max-width: 768px) {
    .card-body {
        padding: 2rem !important;
    }
}
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    {# Fil d'ariane #}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('library_home') }}">Biblioth√®que</a></li>
            <li class="breadcrumb-item active" aria-current="page">Confirmation d'achat</li>
        </ol>
    </nav>

    <div class="card shadow-lg mx-auto" style="max-width: 850px; border-radius: 20px; border: none; overflow: hidden;">
        <div class="row g-0">
            <div class="col-md-5 bg-light d-flex align-items-center justify-content-center p-5" style="border-right: 1px solid #eee;">
                
                {# MODIFICATION ICI : Utilisation de la m√©thode ID et du dossier covers #}
                <div class="text-center">
                    <img src="{{ asset('images/covers/' ~ livre.id ~ '.png') }}" 
                         class="img-fluid rounded shadow-sm" 
                         alt="{{ livre.titre }}"
                         style="max-height: 350px; object-fit: cover;"
                         onerror="this.src='{{ asset('images/covers/default-book.png') }}';">
                    
                    {# Petit texte d'aide si l'image est celle par d√©faut #}
                    <p class="mt-3 small text-muted text-uppercase tracking-wider" id="cover-label">Couverture du livre</p>
                </div>

            </div>

            <div class="col-md-7">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <span class="badge bg-primary mb-2">Nouvel Emprunt</span>
                        {# Rappel : on utilise .titre car .title n'existe pas dans ton entit√© #}
                        <h1 class="h2 fw-bold text-dark mb-1">{{ livre.titre }}</h1>
                        <p class="fs-5 text-muted">R√©dig√© par <span class="text-dark fw-semibold">{{ livre.auteur }}</span></p>
                    </div>
                    
                    <div class="bg-light p-4 rounded-4 mb-4 border border-1">
                        <div class="d-flex justify-content-between align-items-baseline">
                            <span class="text-uppercase small fw-bold text-muted">Montant √† r√©gler</span>
                            <div class="text-end">
                                <span class="h2 fw-bold text-success mb-0">{{ livre.prix|default('5.00') }} ‚Ç¨</span>
                                <div class="small text-muted">TVA incluse</div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex align-items-start gap-3 alert alert-warning border-0 rounded-3 mb-4">
                        <span class="fs-4">‚è≥</span>
                        <div>
                            <strong class="d-block">Dur√©e de l'emprunt</strong>
                            <span class="small">Vous aurez acc√®s √† ce livre pendant <strong>15 jours</strong> √† compter de maintenant.</span>
                        </div>
                    </div>

                    <div class="d-grid gap-3 mt-5">
                        <a href="{{ path('app_emprunt_commander', {'id': livre.id}) }}" 
                           class="btn btn-success btn-lg py-3 fw-bold shadow-sm"
                           onclick="return confirm('Confirmez-vous le paiement de {{ livre.prix|default('5.00') }} ‚Ç¨ pour l\'emprunt de ce livre ?')">
                            üí≥ Confirmer le paiement
                        </a>
                        <a href="{{ path('library_home') }}" class="btn btn-link text-decoration-none text-muted">
                            ‚¨ÖÔ∏è Retourner au catalogue
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-success {
        transition: transform 0.2s, background-color 0.2s;
    }
    .btn-success:hover {
        transform: translateY(-2px);
        background-color: #157347;
    }
    /* S'assurer que l'image ne d√©passe pas */
    .img-fluid {
        max-width: 100%;
        height: auto;
    }
</style>
{% endblock %}