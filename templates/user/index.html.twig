{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/user.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1 class="page-title">Liste des utilisateurs</h1>
        <div>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('user_new') }}" class="btn btn-primary">Créer un utilisateur</a>
            {% endif %}
        </div>
    </div>

    <div class="card">
        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Rôles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge">{{ role|replace({'ROLE_': ''}) }}</span>
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-ghost">Modifier</a>

                                {% if is_granted('ROLE_ADMIN') %}
                                    <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" style="display:inline" onsubmit="return confirm('Supprimer cet utilisateur ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button class="btn btn-danger" type="submit">Supprimer</button>
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="center muted">Aucun utilisateur trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>
{% endblock %}
