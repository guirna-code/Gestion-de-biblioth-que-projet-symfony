{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .active-role { background-color: var(--primary); color: white !important; }
    </style>
{% endblock %}

{% block body %}
    <div class="container" style="padding:3rem 1rem">
        <div style="max-width:520px;margin:0 auto">
            <div class="card">
                <div style="padding:1.25rem">
                    <h3 class="page-title">Se connecter</h3>

                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <div style="display:flex; gap:.5rem; margin-bottom:1.5rem;">
                        <button id="tab-admin" class="btn btn-ghost" type="button">Admin</button>
                        <button id="tab-client" class="btn btn-ghost active-role" type="button">Client</button>
                    </div>

                    <form method="post" action="{{ path('app_login') }}">
                        <div class="form-group">
                            <label for="username" id="label-username">Identifiant (email)</label>
                            <input type="text" value="{{ last_username }}" name="_username" id="username" required autofocus>
                        </div>

                        <div class="form-group" style="margin-top: 1rem;">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div style="display:flex; justify-content:space-between; align-items:center; margin-top:1.5rem">
                            <button class="btn btn-primary" type="submit">Se connecter</button>
                            <a href="/" class="btn btn-ghost">Retour</a>
                        </div>
                    </form>

                    <div style="margin-top:1.5rem; border-top:1px solid #eee; padding-top:1rem">
                        <div style="display:flex; justify-content:space-between; align-items:center">
                            <small class="muted">Nouvel utilisateur ?</small>
                            <a href="{{ path('user_new') }}" class="btn btn-ghost btn-sm">S'inscrire (client)</a>
                        </div>
                    </div>

                    <script>
                        document.addEventListener('DOMContentLoaded', function() {
                            const adminBtn = document.getElementById('tab-admin');
                            const clientBtn = document.getElementById('tab-client');
                            const usernameLabel = document.getElementById('label-username');

                            function selectRole(role) {
                                if (role === 'admin') {
                                    usernameLabel.textContent = 'Nom d\'utilisateur (Admin)';
                                    adminBtn.classList.add('active-role');
                                    clientBtn.classList.remove('active-role');
                                } else {
                                    usernameLabel.textContent = 'Identifiant (email)';
                                    clientBtn.classList.add('active-role');
                                    adminBtn.classList.remove('active-role');
                                }
                            }

                            adminBtn.addEventListener('click', () => selectRole('admin'));
                            clientBtn.addEventListener('click', () => selectRole('client'));
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
{% endblock %}