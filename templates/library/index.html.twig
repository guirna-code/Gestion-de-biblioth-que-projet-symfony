{% extends 'base.html.twig' %}

{% block title %}Biblioth√®que{% endblock %}

{% block body %}
    <div class="container">
        
        {# --- BLOC DES MESSAGES FLASH (Affiche le bandeau vert de succ√®s) --- #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mt-3" role="alert" style="border-radius: 15px; background-color: #d1e7dd; color: #0f5132;">
                <div class="d-flex align-items-center">
                    <span class="fs-4 me-3">‚úÖ</span>
                    <div>
                        <strong>Succ√®s !</strong> {{ message }}
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {# --- AFFICHAGE DES ERREURS (Si besoin) --- #}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger mt-3" role="alert">
                ‚ùå {{ message }}
            </div>
        {% endfor %}

        <div class="page-header mt-4">
            <div class="flex items-center gap-md">
                {# 1. LOGO DE LA BIBLIOTH√àQUE #}
                <img src="{{ asset('images/logo-library.png') }}" alt="Logo" style="width: 80px; height: 80px; border-radius: 50%;">
                
                <div>
                    <h1 class="page-title">üìö Biblioth√®que</h1>
                    <p class="page-subtitle">Gestion compl√®te de votre biblioth√®que num√©rique</p>
                </div>
            </div>
            <div class="flex items-center gap-md">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <span class="badge badge-success">Connect√© : {{ app.user.email }}</span>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline btn-sm">D√©connexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-sm">Se connecter</a>
                {% endif %}
            </div>
        </div>

        <div class="mt-xl">
            <div class="flex items-center justify-between mb-md">
                <h2 class="h4 mb-0">üìñ Catalogue des livres</h2>
            </div>

            <div class="grid grid-3 gap-md">
                {% for livre in livres %}
                    <div class="card h-full flex flex-col justify-between">
                        <div>
                            {# 2. COUVERTURE DYNAMIQUE (M√©thode par ID) #}
                            <div class="book-cover mb-md" style="background: #f4f4f4; border-radius: 8px; overflow: hidden; height: 250px;">
                                <img src="{{ asset('images/covers/' ~ livre.id ~ '.png') }}" 
                                     alt="{{ livre.titre }}" 
                                     style="width: 100%; height: 100%; object-fit: cover;"
                                     onerror="this.src='{{ asset('images/covers/default-book.png') }}';">
                            </div>

                            <h3 class="h5 mb-sm">{{ livre.titre|default('Titre inconnu') }}</h3>
                            <p class="text-muted small">Auteur : {{ livre.auteur|default('Auteur inconnu') }}</p>
                        </div>
                       <div class="mt-md">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {# On v√©rifie la disponibilit√© r√©elle en base de donn√©es #}
        {% if livre.getDisponible() %}
            <a href="{{ path('app_emprunt_commander', {'id': livre.id}) }}" 
               class="btn btn-primary btn-block">
                Commander maintenant
            </a>
        {% else %}
            {# Si disponible est √† false, on affiche ce bouton gris #}
            <button class="btn btn-secondary btn-block" disabled style="opacity: 0.6; cursor: not-allowed;">
                ‚ùå D√©j√† r√©serv√©
            </button>
        {% endif %}
    {% else %}
        <a href="{{ path('app_login') }}" class="btn btn-outline btn-block btn-sm">
            Connectez-vous pour commander
        </a>
    {% endif %}
</div>
                    </div>
                {% else %}
                    <div class="card col-span-3 center p-lg">
                        <p class="muted">Aucun livre n'est disponible pour le moment.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}