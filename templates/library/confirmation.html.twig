{% extends 'base.html.twig' %}

{% block title %}Confirmer l'achat - {{ livre.titre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    {# Fil d'ariane pour une meilleure navigation #}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('library_home') }}">Biblioth√®que</a></li>
